{
  "name": "typeorm-query-hooks",
  "version": "2.2.5",
  "description": "A plugin-based extension system for TypeORM QueryBuilder with hooks and table extraction utilities. No import changes needed!",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./register": {
      "import": "./dist/register.js",
      "require": "./dist/register.js",
      "types": "./dist/register.d.ts"
    },
    "./nestjs": {
      "import": "./dist/nestjs/index.js",
      "require": "./dist/nestjs/index.js",
      "types": "./dist/nestjs/index.d.ts"
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "lint:fix": "eslint src/**/*.ts test/**/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "keywords": [
    "typeorm",
    "hooks",
    "query-builder",
    "plugin",
    "extension",
    "instrumentation",
    "nestjs",
    "typescript",
    "database",
    "postgres",
    "mysql",
    "sql",
    "table-extraction",
    "monitoring",
    "observability"
  ],
  "author": "Roy Leibovitz",
  "license": "MIT",
  "homepage": "https://github.com/RoyLeibo/typeorm-query-hooks#readme",
  "bugs": {
    "url": "https://github.com/RoyLeibo/typeorm-query-hooks/issues"
  },
  "peerDependencies": {
    "typeorm": "^0.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.40.0",
    "jest": "^29.5.0",
    "sqlite3": "^5.1.6",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0",
    "typeorm": "^0.3.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RoyLeibo/typeorm-query-hooks.git"
  }
}
